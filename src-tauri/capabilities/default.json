{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "platforms": [
    "iOS", 
    "android",
    "linux", 
    "macOS", 
    "windows"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-close",
    "core:window:allow-set-focus",
    "core:webview:allow-set-webview-focus",
    "shell:allow-open",
    "shell:allow-execute",
    "dialog:default",
    "deep-link:default",
    "deep-link:allow-is-registered",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOWNLOAD/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-open",
      "allow": [
        {
          "path": "$DOWNLOAD/*"
        }
      ]
    },
    {
      "identifier": "fs:write-files",
      "allow": [
        {
          "path": "$DOWNLOAD/*"
        }
      ]
    }
  ]
}
